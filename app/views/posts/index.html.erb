<% @posts.each do |post| %>
  <p><h3>Title</h3><%= post.title %></p>
  <p><h3>Content</h3> <%= post.content %></p>
  <% post.files.each do |file| %>
  <%= link_to image_tag(file), file %>
   <% end %>
  <% post.vids.each do | vid| %>
  <div style="width:400px; height:400px">
 <%= link_to  video_tag(url_for(vid), style:"width:100%; height: auto", controls: '') %>
  </div>
  <% end %>


  <p>
  	<h3>Posted Email</h3> <%= time_ago_in_words(post.created_at) %> ago.
   <%= post.user.email %>
   <% if current_user == post.user %>
   <%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
    <% end %> </p>
    <% end %>